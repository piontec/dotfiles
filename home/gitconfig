[color]
	diff = auto
	status = auto
	branch = auto

[alias]
	co = checkout
	ci = commit
	a = add
	graph = log --graph --decorate --pretty=format:\"%C(red bold)%h%x09%Cgreen%d%Creset%x20%s%x20%Cblue(%an)%Creset\"
	st = status
	unstage = reset HEAD --
  pl = log --pretty=\"%Cblue%h%Creset %Cgreen[%cr]%Creset %s\" 

[push]
	default = simple

[credential]
	helper = cache --timeout=36000

[include]
    path = ./.gitconfig.user
[status]
  submoduleSummary = true

[url "ssh://git@github.com/piontec/"]
  insteadOf = https://github.com/piontec/

[pull]
  rebase = true

[diff]
  colorMoved = default

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
  line-numbers = true
  syntax-theme = Dracula
  navigate = true

[interactive]
  diffFilter = delta --color-only
 
